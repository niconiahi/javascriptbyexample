<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Javascript by example: {{.Name}}</title>
    <link rel=stylesheet href="reset.css">
    <link rel=stylesheet href="code.css">
    <link rel=stylesheet href="styles.css">
  </head>
  <body>
    <main id="{{.Name}}">
      <h2><a href="./">Javascript by example</a>: {{.Name}}</h2>
      <table>
        {{range .Segments }}
        <tr>
          <td class="docs">
            {{.Markdown}}
          </td>
          <td class="code{{if eq .CodeBlock "" }} empty{{end}}">
            {{.CodeBlock}}
          </td>
        </tr>
        {{end}}
      </table>
      <table>
        {{with .Console}}
        <tr>
          <td class="docs">
            {{.Markdown}}
          </td>
          <td class="code{{if eq .CodeBlock "" }} empty{{end}}">
            {{.CodeBlock}}
          </td>
        </tr>
        {{end}}
      </table>
      <nav>
        {{if .Previous}}
        <p class="previous">
          Previous example: <a href="{{.Previous}}" rel="previous">{{.Previous}}</a>
        </p>
        {{end}}
        {{if .Next}}
        <p class="next">
          Next example: <a href="{{.Next}}" rel="next">{{.Next}}</a>
        </p>
        {{end}}
      </nav>
    </main>
  </body>
</html>
